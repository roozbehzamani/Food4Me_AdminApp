<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layoutDirection="rtl"
android:layout_margin="8dp"
android:id="@+id/cartCardView"
android:background="#30333639">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/food"
        android:background="#30333639"
        android:weightSum="5.9"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:gravity="center"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <com.makeramen.roundedimageview.RoundedImageView

                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_child"
                android:src="@drawable/editfooooood"
                android:scaleType="centerCrop"
                app:riv_corner_radius="30dip"
                app:riv_border_width="4dip"
                app:riv_border_color="#fff"
                app:riv_oval="true"
                android:layout_width="100dp"
                android:layout_height="100dp"/>


        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:weightSum="2"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom">

                <TextView

                    android:id="@+id/txtName"
                    android:textSize="18sp"
                    android:text="نام"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top">


                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:background="@android:color/transparent"

                        android:gravity="center_vertical"
                        android:id="@+id/txtCartItemPlaceName"
                        android:textSize="18sp"
                        android:text="تعداد"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:gravity="right"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:textColor="@color/black"
                        android:text="1"
                        android:textSize="20sp" />



                </LinearLayout>








            </RelativeLayout>

        </LinearLayout>





        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:weightSum="2"
            android:layout_weight="2.4"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout

                android:gravity="bottom"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="0dp">




            </RelativeLayout>
            <RelativeLayout

                android:gravity="top"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/btnOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_option"
                    android:gravity="center_horizontal"
                    android:text="تغییرات درخواستی"
                    android:textSize="18sp" />


            </RelativeLayout>




        </LinearLayout>









    </LinearLayout>


</RelativeLayout>

</android.support.v7.widget.CardView>